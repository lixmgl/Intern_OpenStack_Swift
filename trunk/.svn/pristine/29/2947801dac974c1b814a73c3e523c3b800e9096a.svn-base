<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<title>Project Table</title>
		<meta http-equiv="X-UA-Compatible" content="IE=8,chrome=1" />
		
		<link rel="stylesheet" type="text/css" href="../../../../xwt/themes/reboot2/reboot2-base.css">
		<link rel="stylesheet" type="text/css" href="../../../../xwt/themes/reboot2/reboot2-xwt.css">	
		<link rel="stylesheet" type="text/css" href="../../../../xwt/themes/reboot2/reboot2-explorer.css">
	
    	<script type="text/javascript" djConfig="isDebug: true, parseOnLoad: true" src="../../../../dojo/dojo.js"></script>
		<script type="text/javascript">
			dojo.require("xwt.widget.table.Table");
			dojo.require("xwt.widget.table.Toolbar");
			dojo.require("xwt.widget.tests.table.store.SampleExtendedIFWS");
			dojo.require("xwt.widget.layout.Dialog");
			dojo.require("dijit.form.Button");
			dojo.require("dijit.form.TextBox");
			dojo.require("dijit.form.NumberTextBox");
			dojo.require("xwt.widget.form.DropDown");
			dojo.require("dijit.layout.BorderContainer");
			dojo.require("dijit.layout.ContentPane");
			dojo.require("xwt.widget.notification.ValidationTextBox");
			dojo.require("xwt.widget.tests.table.TableTestEditWidget");
			dojo.require("xwt.widget.tests.table.ValidatingDialog");			

			data = {};
			dojo.xhrGet({url:"/portal/project/project.json", sync:true, handleAs:"json"}).addCallback(function(results){
				data = results;
			});
			
			// load the store */
			dataStore = new xwt.widget.tests.table.store.SampleExtendedIFWS({
				data: data,
				filterOnServer:false
			});

			//	default new item
			defItem = {
				"ID":"0",
				"Name":"",
				"Description":"",
				"Enabled":true
			};
	
			//	column structure.
			columns = [{
				attr: "id",
				label: "ID",
				width: 250,
				alignment: "right",
				vAlignment:"middle",
				sortable: true,
				sorted: "ascending",
				filterable: true,
				editable: false
			},
			{
				attr: "name",
				label: "Name",
				width: 120,
				vAlignment: "middle",
				editable: true,
				sortable: true
			},
			{
				attr: "description",
				label: "Description",
				vAlignment: "middle",
				width: 380,
				editable: true,
				sortable: true
			},
			{
				attr: "enabled",
				label: "Enabled",
				width: 60,
				vAlignment: "middle",
				alignment:"center",
				filterType: "boolean",
				cellType: "boolean",
				editable: true,
				sortable: true
			}];

			dojo.addOnLoad(function(){
				var table = dijit.byId("table");
				var isNew = false;
				
				dojo.connect(table.store, "onDelete", function(item){
					table = dijit.byId("table")
					image_id = table.store.getIdentity(item)
					var xhrArgs = {
						url: "/portal/project/delete",
						content: {"id":image_id},
						handleAs: "text",
						load: function(data) {
							setTimeout(stop, 100);
						},
						error: function(error) {
							setTimeout(stop, 100);
							alert("Failed to delete project")
						}
					}
					var deferred = dojo.xhrPost(xhrArgs);
				});
				
				dojo.connect(table.store, "onNew", function(item){
					isNew = true
				});

				dojo.connect(table, "onCommit", function(item, value){
					table = dijit.byId("table")
					name = value["name"]
					image_id = table.store.getIdentity(item)
					
					if (isNew == true){
						var xhrArgs = {
							url: "/portal/project/new",
							content: {"name":name},
							handleAs: "text",
							load: function(data) {
								setTimeout(stop, 100);
							},
							error: function(error) {
								setTimeout(stop, 100);
								alert("Failed to create project: " + error.status)
							}
						}
						var deferred = dojo.xhrPost(xhrArgs);
						isNew = false
					} else {
				        var xhrArgs = {
							url: "/portal/project/edit",
							content: {"name":name, "id":image_id},
							handleAs: "text",
							load: function(data) {
								setTimeout(stop, 100);
							},
							error: function(error) {
								setTimeout(stop, 100);
								alert("Failed to update project: " + error.status)
							}
						}
						var deferred = dojo.xhrPost(xhrArgs);
					}
					data = {};
					dojo.xhrGet({url:"/portal/project/project.json", sync:true, handleAs:"json"}).addCallback(function(results){
						data = results;
					});
					
					table.data = data
					table.refresh()
					table.render(true)
				});            
			});
		</script>
    </head>
    <body class="reboot2">
    	<center>
	    	<div style="float: center; width:870px">
				<div id="global" dojoType="xwt.widget.table.GlobalToolbar" title="Projects" tableId="table" displayTotalRecords="true" showButtons="refresh, settings"></div>
				<div align="left" id="context" dojoType="xwt.widget.table.ContextualToolbar" tableId="table" quickFilter=false>
					<div align="left" dojoType="xwt.widget.table.ContextualButtonGroup" showButtons="edit,add,delete"></div>
				</div>
				<table id="table" jsid="table" dojoType="xwt.widget.table.Table" store="dataStore" query="''"
					selectMultiple="false" selectModel="input" selectAllOption="false" structure="columns" showIndex="false"
					immediateCommit="true" rowsPerPage="25" quickViewDelay="1500" 
					filters="filters" filterDelay="1500" filterOnServer=false style="float: center; height: 620px; width: 850px; overflow: hidden">
				</table>
			</div>
	</body>
</html>
